@model IEnumerable<OrderViewModel>
@{
    ViewData["Title"] = "My Order History";
}
<div class="esh-orders">
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <table class="table table-bordered">
            <tr>
                <th>Order number</th>
                <th>Date</th>
                <th>Total</th>
                <th>Status</th>
                <th></th>
                <th></th>
            </tr>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@Html.DisplayFor(modelItem => item.OrderNumber)</th>
                        <th>@Html.DisplayFor(modelItem => item.OrderDate.LocalDateTime)</th>
                        <th>$ @Html.DisplayFor(modelItem => item.Total)</th>
                        <th>@Html.DisplayFor(modelItem => item.Status)</th>
                        <th><a class="esh-orders-link" asp-controller="Order" asp-action="Detail"
                        asp-route-orderId="@item.OrderNumber">Detail</a></th>
                        <th>
                            @if (item.Status.ToLower() == "submitted")
                            {
                                <a class="esh-orders-link" asp-controller="Order" asp-action="cancel"
                        asp-route-orderId="@item.OrderNumber">Cancel</a>
                            }
                        </th>
                    </tr>
                }
            }
        </table>
    </div>
</div>

